#!/bin/sh -x
#
# Invoked with: ./run-bonnie.sh /mnt/bonnie-test <size> <name>


which bonnie

if [ $? -ne 0 ]; then
  sudo apt-get update
  sudo apt-get install -y bonnie++
else
  echo "bonnie is already installed"
fi;

if [ ! -d "${1}" ]; then
  echo "Creating '${1}' owned by ${USER}"
  sudo mkdir -p $1
  sudo chown -R $USER $1
fi;

OUTPUT_CSV="output_${2}_${3}.csv"
OUTPUT_HTML="output_${2}_${3}.html"

# Clean out previous results
echo "Cleaning out previous results"
rm -f *.html *.csv

time bonnie -d $1 \
            -s $2 \
            -r 1024 \
            -m $3 \
            -u $USER \
            -q > $OUTPUT_CSV

bon_csv2html < $OUTPUT_CSV > $OUTPUT_HTML

